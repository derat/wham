key_bindings {
  bind Ctrl+F1 exec /usr/bin/urxvt
  bind Ctrl+F2 exec /home/derat/local/firefox/firefox

  bind Ctrl+0 switch_nth_window 9
  bind Ctrl+1 switch_nth_window 0
  bind Ctrl+2 switch_nth_window 1
  bind Ctrl+3 switch_nth_window 2
  bind Ctrl+4 switch_nth_window 3
  bind Ctrl+5 switch_nth_window 4
  bind Ctrl+6 switch_nth_window 5
  bind Ctrl+7 switch_nth_window 6
  bind Ctrl+8 switch_nth_window 7
  bind Ctrl+9 switch_nth_window 8

  bind Ctrl+b cycle_window_config true
  bind Ctrl+g cycle_anchor_gravity true
  bind Ctrl+Shift+g cycle_anchor_gravity false
  bind Ctrl+h switch_nearest_anchor left
  bind Ctrl+i display_window_props
  bind Ctrl+j switch_nearest_anchor down
  bind Ctrl+k switch_nearest_anchor up
  bind Ctrl+l switch_nearest_anchor right
  bind Ctrl+n create_anchor
  bind Ctrl+t toggle_tag
}

window {
  criteria {
    app_name urxvt
  }
  config default {
    width 80u
    height *
  }
  config wide {
    width 120u
    height *
  }
}

